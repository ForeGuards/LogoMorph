# LogoMorph Backend Environment Configuration

# Server Configuration
PORT=4000
NODE_ENV=development

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# AWS S3 Storage
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=logomorph-assets

# Redis (for job queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ============================================
# AI SERVICES CONFIGURATION
# ============================================

# OpenAI (for vision analysis & color palette suggestions)
OPENAI_ENABLED=false
OPENAI_API_KEY=sk-xxxxx
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: custom endpoint

# Replicate (for AI background generation)
REPLICATE_ENABLED=false
REPLICATE_API_KEY=r8_xxxxx
REPLICATE_MODEL=stability-ai/sdxl:latest
# REPLICATE_WEBHOOK_URL=https://your-domain.com/webhooks/replicate  # Optional

# Stable Diffusion (self-hosted alternative)
SD_ENABLED=false
SD_BASE_URL=http://localhost:7860
SD_API_KEY=  # Optional if your SD instance requires auth
SD_MODEL=sd_xl_base_1.0
SD_STEPS=30
SD_GUIDANCE=7.5

# Remove.bg (for background removal)
REMOVEBG_ENABLED=false
REMOVEBG_API_KEY=xxxxx
REMOVEBG_SIZE=regular  # Options: regular, hd, full

# AI Cost Controls
AI_MAX_COST_PER_JOB=1.0  # Maximum USD per job
AI_MONTHLY_BUDGET=100.0   # Monthly budget in USD

# AI Performance
AI_ENABLE_CACHE=true
AI_CACHE_EXPIRY=86400  # 24 hours in seconds

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable specific AI features
FEATURE_AI_BACKGROUNDS=false
FEATURE_VISION_ANALYSIS=false
FEATURE_AUTO_BACKGROUND_REMOVAL=false
FEATURE_SMART_CROPPING=false
